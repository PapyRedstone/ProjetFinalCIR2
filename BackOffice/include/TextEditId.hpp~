#ifndef TEXT_EDIT_ID_HPP
#define TEXT_EDIT_ID_HPP

#include <QtWidgets>

class TextEditID: public QtextEdit{
  Q_OBJECT

public:
  TextEditID(int id, QWidget* p=nullptr):ID{id}, QTextEdit{p}{
    connect(this,SIGNAL(textChanged()),this,SLOT(txtC()));
  }
  virtual ~TextEditID(){}

public slots:
  void txtC(){
    emit textChange(ID);
  }

signals:
  void textChange(int);

private:
  int ID;
    
};

#endif
