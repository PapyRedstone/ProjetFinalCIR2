#include "theme.h"
#include "ui_theme.h"

Theme::Theme(Database& db, QWidget *parent) :
    QDialog(parent),
    ui(new Ui::Theme),
    database{db}
{
    ui->setupUi(this);
}

Theme::~Theme()
{
    delete ui;
}

void Theme::on_Jeu_2_clicked()
{
    this->hide();
    Jeu *jeu = new Jeu(database);
    jeu->show();
}

void Theme::on_Utilisateur_clicked()
{
    this->hide();
    Utilisateur *utilisateur = new Utilisateur(database);
    utilisateur->show();
}
